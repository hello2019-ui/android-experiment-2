<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/text1_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/text_r"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称："
            android:textSize="25sp"
            />
        <EditText
            android:id="@+id/edt_setusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_weight="1"
            android:maxLines="1"
            android:hint="请输入昵称～"
            tools:ignore="DuplicateIds" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/text2_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/text1_r">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="25sp"
            />
        <EditText
            android:id="@+id/edt_setpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLines="1"
            android:hint="请输入密码（不为空）"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/text3_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/text2_r">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="25sp"
            />
        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLines="1"
            android:hint="再次输入密码"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_below="@+id/text3_r"
        android:layout_width="80dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="确 定"
        android:textColor="#000000"
        android:background="@android:color/white"
        android:textSize="24sp"
        android:layout_height="40dp" />

</RelativeLayout>